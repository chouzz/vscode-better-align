{
  "name": "vscode-better-align",
	"displayName": "Better Align",
	"description": "Better vertical alignment with/without selection in any language for any characters or words.",
	"version": "1.2.0",
	"icon": "images/icon.png",
	"publisher": "chouzz",
    "license": "SEE LICENSE IN LICENSE",
	"author": {
        "name": "Chouzz",
        "url": "https://github.com/chouzz"
    },
	"bugs": {
		"url": "https://github.com/chouzz/vscode-better-align/issues",
		"email": "zhouhua25@qq.com"
	  },
	  "repository": {
		"type": "git",
		"url": "https://github.com/chouzz/vscode-better-align.git"
	  },
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:vscode-better-align.align"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-better-align.align",
				"title": "Align"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Alignment configuration",
			"properties": {
				"alignment.operatorPadding": {
					"type": "string",
					"enum": [
						"left",
						"right"
					],
					"default": "right",
					"description": "Control where to insert space to align different length operators (e.g. aligning = += *= ...)"
				},
				"alignment.surroundSpace": {
					"type": "object",
					"default": {
						"colon": [
							0,
							1
						],
						"assignment": [
							1,
							1
						],
						"arrow":[
							1,
							1
						],
						"comment": 2
					},
					"description": "Specify how many spaces to insert around the operator."
				},
				"alignment.indentBase": {
					"type": "string",
					"enum": [
						"firstline",
						"activeline",
						"dontchange"
					],
					"default": "firstline",
					"description": "firstline: Change indent of all lines to the firstline.\n activeline: Change intent of all lines to the activeline.\n dontchange: Don't change line indent, only aligns those lines with same indentation."
				}
			}
		},
		"configurationDefaults": {
			"[shellscript]": {				
				"alignment.surroundSpace": {
					"colon": [ 0, 1 ],
					"assignment": [ -1, -1 ],
					"arrow":[ 1, 1 ],
					"comment": 2
				}
			}
		},
		"keybindings": [
			{
			  "command": "vscode-better-align.align",
			  "key": "alt+a",
			  "when": "editorTextFocus"
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"ts-loader": "^9.3.1",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"@vscode/test-electron": "^2.1.5"
	}
}
